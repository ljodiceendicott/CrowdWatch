{
  "functions": {
    "source": "functions"
  },
  "database": {
    "rules": "securityRules.json"
  },
  "hosting": {
    "site": "crowdwatch",
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "hosting": {
      "port": 5000
    },
    "storage": {
      "port": 9199
    },
    "database": {
      "host": "127.0.0.1",
      "port": 5002
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  },
  "storage": {
    "rules": "storage.rules"
  }
}